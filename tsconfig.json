{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "types/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": false,
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["vite/client", "element-plus/global"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
